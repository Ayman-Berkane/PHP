{% extends 'base.html.twig' %}

{% block title %}Hello TableController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <table class="table table-hover align-middle">
        <thead class="bg-primary text-white">
        <tr>
            <th scope="col" class="bg-primary text-white">Name</th>
            <th scope="col" class="bg-primary text-white">Email</th>
            <th scope="col" class="bg-primary text-white">Password</th>
            <th scope="col" class="bg-primary text-white">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr class="bg-white">
                <td class="fw-semibold">{{ user.name }}</td>
                <td>{{ user.email }}</td>
                <td>
                    {{ user.password }}
                </td>
                <td class="text-center">
                    <a href="{{ path('app_table_detail', {'id': user.id}) }}" class="btn btn-primary mt-auto">See detail</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center text-muted py-4">No users available.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
