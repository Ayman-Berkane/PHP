{% extends 'base.html.twig' %}

{% block title %}Film Index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-4">Films</h1>
            <a href="{{ path('app_film_new') }}" class="btn btn-success btn-lg">
                <i class="fas fa-plus-circle"></i> Create New Film
            </a>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Films List</h5>
            </div>
            <div class="card-body">
                <table class="table table-hover table-bordered table-striped">
                    <thead class="thead-light">
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th class="text-center">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for film in films %}
                        <tr>
                            <td>{{ film.id }}</td>
                            <td>{{ film.name }}</td>
                            <td>{{ film.description }}</td>
                            <td class="text-center">
                                <a href="{{ path('app_film_show', {'id': film.id}) }}" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> Show
                                </a>
                                <a href="{{ path('app_film_edit', {'id': film.id}) }}" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center text-muted">No records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
